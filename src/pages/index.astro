---
import BaseLayout from "../layouts/BaseLayout.astro";

import TileMenu from '../components/TileMenu.astro';

const tiles = [
  { label: "Bestiary", href: "/creatures" },
  { label: "Magic Items", href: "/magic-items" },
  { label: "Spells", href: "/spells" },
  { label: "Character Sheet", href: "/character-sheet"}
];

const page = {
  title: "Index",
  path: "/"
}
---

<BaseLayout page={page}>
  <TileMenu tiles={tiles} />
  
</BaseLayout>
