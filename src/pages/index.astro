---
import BaseLayout from "../layouts/BaseLayout.astro";

import TileMenu from '../components/TileMenu.astro';

const tiles = [
  { label: "Bestiary", href: "/bestiary", visible: true },
  { label: "Creature Builder", href: "/creature-builder/npc", visible: true },
  { label: "Magic Items", href: "/magic-items", visible: false },
  { label: "Spells", href: "/spells", visible: false },
  { label: "Character Sheet", href: "/character-sheet", visible: false}
];

const page = {
  title: "Menu",
  path: "/"
}
---

<BaseLayout page={page}>
  <TileMenu tiles={tiles} />
</BaseLayout>
